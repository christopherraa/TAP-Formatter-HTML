<html>
	<head>
		<title>[% report.title || 'Test Report' %]</title>
		<style type="text/css">
/* TODO: move this to an external file */
html {
  width: 100%;
  height: 100%;
}

body {
	font-family: Helvetica, Verdana, Arial, Tahoma;
	font-size: small;
	background-color: #efefef;
}

/* the summary section */
#summary {
  position: relative;
  padding: 2px 0 2 0;
  width: 90%;
  font-size: x-large;
  text-align: center;
}

#summary.passed {
  background-color: #99ff66;
  border: 1px solid #00ff00;
}

#summary.failed {
  background-color: #ff6450;
  border: 1px solid #ff0000;
}

#summary a {
  width: 100%;
  display: block;
	margin: 0;
	padding: 0;
  text-decoration: none;
  color: #000000;
}

#summary a:hover {
  text-decoration: none;
  color: #6666aa;
}



/******************************************************************************
 * The report detail section
 */
#detail {
  margin-top: 5px;
  width: 90%;
}

table.detail {
  width: 100%;
  border: 1px solid #3333ee;
  padding: 2px;
/*  border-collapse: collapse; */
  border-spacing: 0px;

}

table.detail th {
  border-bottom: 2px solid #3333ee;
  padding-top: 2px;
}

table.detail td {
  position: relative;
  top: 0px;
  left: 0px;
  border-top: 1px solid #aaaaaa;
}

table.detail tfoot tr td {
  border-top: 1px solid #3333ee;
}

table.detail td.time {
  text-align: center;
  font-size: small;
}

table.detail td.percent {
  border: 1px solid #99cc99;
  background-color: #99ff66;
  text-align: center;
  font-size: small;
}

table.detail td.severity-very-low {
  border: 1px solid #dd6633;
  background-color: #ccff99;
}

table.detail td.severity-low {
  border: 1px solid #dd6633;
  background-color: #ffff99;
}

table.detail td.severity-med {
  border: 1px solid #dd6633;
  background-color: #ffcc33;
}

table.detail td.severity-high {
  border: 1px solid #dd6633;
  background-color: #dd8866;
}

table.detail td.severity-very-high {
  border: 1px solid #dd6633;
  background-color: #bb6644;
}

a.file {
  display: block;
  margin: 0;
  padding: 0;
  text-decoration: none;
  width: 100%;
  height: 100%;
}

a.file:hover {
  text-decoration: none;
  color: #6666ee;
}

div.test-run {
  position: relative;
  margin-top: 10px;
  border-top: 1px dashed blue;
}

div.test-run div.file {
  position: absolute;
  top: 0px;
  left: 0px;
}

div.test-run div.results {
  position: absolute;
  top: 0px;
  left: 100px;
}

div.test-run div.percent {
  position: absolute;
  top: 0px;
  left: 500px;
}

ul.test-summary {
  clear: both;
	margin: 0;
	padding: 0;
}

ul.test-summary li {
  float: left;
	margin-left: 1;
	padding: 0;
  width: 15px;
  height: 10px;
	list-style: none;
}

ul.test-summary li a {
  display: block;
	margin: 0;
	padding: 0;
  text-decoration: none;
  width: 100%;
  height: 100%;
}

ul.test-summary li.ok {
  border: 1px solid #66cc33;
  background-color: #99ff66;
}

ul.test-summary li.todo-ok {
  border: 1px solid #eeaa00;
  background-color: #ffcc00;
}

ul.test-summary li.skip-ok {
  border: 1px solid #66cc33;
  background-color: #ddffbb;
}

ul.test-summary li.not-ok {
  border: 1px solid #ff6450;
  background-color: #ff0000;
}

ul.test-summary li.todo-not-ok {
  border: 1px solid #99d999;
  background-color: #99cc66;
}

/* test detail */
div.test-detail {
	margin: 0;
	padding: 0;
/*  display: none; /* by default */
}

/* parse errors */
ul.parse-errors {
	margin: 0;
	padding: 0;
  clear: left;
}

ul.parse-errors li {
	margin-left: 4px;
	list-style: none;
  color: red;
}

/* the test output */
ul.test-out {
	margin: 0;
	padding: 0;
  clear: left;
}

ul.test-out li {
	margin-left: 4;
	border-left: none;
	list-style: none;
}

ul.test-out li.test {
  ;
}

ul.test-out li.comment {
  color: #666666;
  font-family: monospace;
}

ul.test-out li.plan {
  color: blue;
}

ul.test-out li.ok {
  /* green-ish, prolly not necessary */
/*  background-color: #eeffee; */
}

ul.test-out li.todo-ok {
  color: #cc3333;
}

ul.test-out li.todo-not-ok {
  color: #773322;
}

ul.test-out li.not-ok {
  color: #ff0000;
}

ul.test-out li.unknown {
  color: #996600;
  font-family: monospace;
}

ul.test-out li.exit-status {
  color: #ff0000;
}
		</style>
	</head>
	<body>
		[% IF report.has_errors %][% SET status = 'failed' %][% ELSE %][% SET status = 'passed' %][% END -%]
		<div id="summary" class="[% status %]">
			<a href="#" title="Test Summary ([% report.percent_passed %]% ok)
	passed [% report.passed %]/[% report.total %] tests in [% report.num_files %] files
	total time: [% report.total_time | format('%.2fs') %]
	[% report.elapsed_time %]">[% status FILTER upper %]</a>
		</div>

		<div id="detail">
			<table class="detail">
				<thead>
					<tr>
						<th class="file">Test file</th>
						<th class="results">Test results</th>
						<th class="time">Time</th>
						<th class="percent">%</th>
					</tr>
				</thead>
				<tbody>
					[%- FOREACH test IN report.tests %]
					<tr id="[% test.test %]" class="test-run [% test.test_status %]">
						<td class="file">
							<a class="file" href="#" title="Test overview:            
	[% test.tests_planned || 0 %] planned, [% test.tests_run || 0 %] run
[% IF test.has_problems %]	has problems!
[% END -%]
[% IF test.num_parse_errors %]	has parse errors!
[% END -%]
[% IF test.skip_all %]	skipped all
[% END -%]
	[% test.passed || 0 %] ok, [% test.failed || 0 %] failed
	[% test.todo || 0 %] todo, [% test.skipped || 0 %] skipped
[% IF test.todo_failed %]	some todo tests failed
[% END -%]
[% IF test.todo_passed %]	some todo tests unexpectedly passed!
[% END -%]
	exit status: [% test.exit %]
	wait status: [% test.wait %]">[% test.test %]</a>
						</td>
						<td class="results">
							[%- SET max_tests = 0 -%]
							[%- SET max_tests = test.tests_planned IF test.tests_planned AND test.tests_planned > max_tests -%]
							[%- SET max_tests = test.tests_run IF test.tests_run AND test.tests_run > max_tests %]
							<ul class="test-summary">
								[%- IF test.tests_run AND test.tests_run > 0 -%]
								[%- SET result_width = (95 / test.tests_run) -%]
								  [%- FOREACH result IN test.results -%]
						        [%- IF result.is_test %]
								    <li class="test [% result.test_status %]" style="width: [% result_width | format('%d') %]%"><a href="#[% test.test _ '-' _ result.test_num %]" title="[% result.raw | html %]">&nbsp;</a></li>
								    [%- END -%]
								  [%- END -%]
								[%- ELSIF test.skip_all -%]
								<li class="skip-ok" style="width: 95%"><a href="#" title="[% test.results.first.raw | html %]">&nbsp;</a></li>
								[%- ELSE -%]
								<li class="stub not-ok" style="width: 95%"><a href="#" title="No tests run!">&nbsp;</a></li>
								[%- END %]
							</ul>
							<div class="test-detail">
								[%- IF test.parse_errors %]
								<ul class="parse-errors">
									[%- FOREACH e IN test.parse_errors %]
									<li>Parse error: [% e %]</li>
									[%- END %]
								</ul>
								[%- END %]
								<ul class="test-out">
									[%- FOREACH result IN test.results %]
									<li [% IF test.is_test %]id="[% test.test _ '-' _ result.test_num %]"[% END -%]
											class="[% result.type -%]
														 [%- IF result.is_test %] test-num-[% result.test_num %][% ' ' _ result.test_status -%]
														 [%- END %]">[% result.raw | html -%]</li>
									[%- END -%]
									[%- IF test.exit OR test.wait -%]
									<li class="exit-status">exit status: [% test.exit %], wait status: [% test.wait %]</li>
									[%- END %]
								</ul>
							</div>
						</td>
						<td class="time">[% test.elapsed_time | format('%.2fs') %]</td>
						<td class="percent [%IF test.severity %][% 'severity-' _ test.severity %][% END %]">[% IF test.percent_passed %][% test.percent_passed %]%[% ELSE %]n/a[% END %]</td>
					</tr>
					[%- END %]
				</tbody>
	
				<tfoot>
					<tr>
						<td class="file">[% report.num_files %] files</td>
						<td class="results">
							[% report.total %] tests,
							[% report.passed %] ok,
							[% report.failed %] failed,
							[% report.todo %] todo,
							[% report.skipped %] skipped <br/>
							[% report.parse_errors %] parse errors,
							exit status: [% report.exit %],
							wait status: [% report.wait %]</td>
						<td class="time">[% report.total_time | format('%.2fs') %]</td>
						<td class="percent">[% report.percent_passed %]%</td>
					</tr>
				</tfoot>
			</table>
		</div>

		<div class="elapsed_time">elapsed time: [% report.elapsed_time %]</div>

		<xmp>
[ % PERL %]
use Data::Dumper;
print "report: " . Dumper( $stash->get( 'report' ) );
[ % END %]
		</xmp>
	</body>
</html>
